{
  "name": "unified-error-handling",
  "version": "0.0.1",
  "description": "A comprehensive Capacitor plugin providing a unified API for multiple error handling platforms",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "bin": {
    "unified-error-handling": "dist/bin/cli.js"
  },
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "UnifiedErrorHandling.podspec",
    "scripts/"
  ],
  "author": "Unified Error Handling Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unified-error-handling/unified-error-handling.git"
  },
  "bugs": {
    "url": "https://github.com/unified-error-handling/unified-error-handling/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "error-handling",
    "crash-reporting",
    "sentry",
    "firebase-crashlytics",
    "bugsnag",
    "rollbar",
    "datadog",
    "logrocket",
    "raygun",
    "appcenter"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination 'platform=iOS Simulator,name=iPhone 15' && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api UnifiedErrorHandlingPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^7.0.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.17",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "~3.4.2",
    "prettier-plugin-java": "~2.7.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.32.0",
    "swiftlint": "^1.0.2",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@capacitor/preferences": "^7.0.1",
    "capacitor-firebase-kit": "^1.0.0"
  },
  "optionalDependencies": {
    "@sentry/capacitor": "^0.16.0",
    "@sentry/react": "7.93.0",
    "@bugsnag/js": "^8.0.0",
    "@bugsnag/plugin-react": "^8.0.0",
    "@datadog/browser-rum": "^5.0.0",
    "rollbar": "^2.26.0",
    "logrocket": "^8.0.0",
    "logrocket-react": "^5.0.0",
    "raygun4js": "^2.28.0",
    "appcenter": "^4.4.0"
  }
}
